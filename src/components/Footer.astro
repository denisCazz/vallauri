<style>
  footer {
    background: var(--primary);
    color: var(--white);
    padding: 3rem 2rem 1rem;
  }

  .footer-content {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-section h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--accent);
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-section a:hover {
    color: var(--white);
  }

  .footer-section .icon {
    display: none;
  }

  /* Social List */
  .social-list li a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .social-icon {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  .footer-bottom {
    max-width: 1400px;
    margin: 2rem auto 0;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.875rem;
  }

  .footer-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .footer-info a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-info a:hover {
    color: var(--white);
  }

  .footer-info span {
    color: rgba(255, 255, 255, 0.4);
  }

  /* Loghi Istituzionali */
  .institutional-logos {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
    padding: 2rem;
    margin-bottom: 2rem;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 12px;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .institutional-logos a {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s, opacity 0.2s;
  }

  .institutional-logos a:hover {
    transform: scale(1.05);
    opacity: 0.9;
  }

  .institutional-logos img {
    height: 90px;
    width: auto;
    object-fit: contain;
  }

  .logo-vallauri {
    height: 110px !important;
  }

  .logo-ministero {
    height: 85px !important;
  }

  .logo-usr {
    height: 90px !important;
  }

  .logo-pon {
    height: 80px !important;
  }

  .logo-dschola {
    height: 85px !important;
  }

  @media (max-width: 768px) {
    footer {
      padding: 2rem 1rem 1rem;
    }

    .institutional-logos {
      gap: 1rem;
      padding: 1.25rem;
      margin-bottom: 1.5rem;
      border-radius: 8px;
    }

    .institutional-logos img {
      height: 50px;
    }

    .logo-vallauri {
      height: 65px !important;
    }

    .logo-ministero,
    .logo-usr,
    .logo-pon,
    .logo-dschola {
      height: 45px !important;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      text-align: center;
    }

    .footer-section h4 {
      font-size: 1rem;
    }

    .footer-section li {
      font-size: 0.9rem;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 0.75rem;
      margin-top: 1.5rem;
      padding-top: 1rem;
    }

    .footer-bottom p {
      font-size: 0.8rem;
    }

    .footer-info {
      flex-wrap: wrap;
      justify-content: center;
    }

    .social-list li a {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .institutional-logos {
      gap: 0.75rem;
      padding: 1rem;
    }

    .institutional-logos img {
      height: 40px;
    }

    .logo-vallauri {
      height: 55px !important;
    }

    .logo-ministero,
    .logo-usr,
    .logo-pon,
    .logo-dschola {
      height: 38px !important;
    }
  }
</style>

---
interface Highlight {
  title: string;
  subtitle: string;
  icon: string;
}

interface Props {
  highlights: Highlight[];
}

const { highlights } = Astro.props;
---

<div class="highlights">
  {highlights.map(item => (
    <div class="highlight-card">
      <div class="highlight-icon">{item.icon}</div>
      <h3>{item.title}</h3>
      <p>{item.subtitle}</p>
    </div>
  ))}
</div>

<style>
  .highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: -3rem auto 3rem;
    padding: 0 2rem;
    position: relative;
    z-index: 10;
  }

  .highlight-card {
    background: var(--white);
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-lg);
    text-align: center;
    transition: transform 0.2s;
  }

  .highlight-card:hover {
    transform: translateY(-4px);
  }

  .highlight-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .highlight-card h3 {
    font-size: 2rem;
    color: var(--primary);
    font-weight: 700;
  }

  .highlight-card p {
    color: var(--text-light);
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .highlights {
      margin-top: -2rem;
    }
  }
</style>

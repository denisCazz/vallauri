---
interface SubMenuItem {
  name: string;
  href: string;
}

interface MenuItem {
  name: string;
  href: string;
  active?: boolean;
  submenu?: SubMenuItem[];
}

interface Props {
  menuItems: MenuItem[];
}

const { menuItems } = Astro.props;
---

<nav>
  <div class="nav-container">
    <div class="nav-header">
      <a href="/" class="nav-logo">
        <img src="/logo.png" alt="Logo IIS Vallauri" />
        <span>IIS Vallauri</span>
      </a>
      <button class="mobile-toggle" aria-label="Menu">☰</button>
    </div>
    <ul class="nav-menu">
      {menuItems.map(item => (
        <li class="nav-item">
          <a 
            href={item.href} 
            class={`nav-link ${item.active ? 'active' : ''} ${item.submenu ? 'has-submenu' : ''}`}
          >
            {item.name}
          </a>
          {item.submenu && (
            <div class="submenu">
              {item.submenu.map(sub => (
                <a href={sub.href}>{sub.name}</a>
              ))}
            </div>
          )}
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  nav {
    background: var(--primary-light);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 0;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: block;
    padding: 1rem 1.25rem;
    color: var(--white);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: background-color 0.2s;
  }

  .nav-link:hover,
  .nav-link.active {
    background: var(--primary);
  }

  .nav-link.has-submenu::after {
    content: " ▾";
    font-size: 0.75rem;
  }

  /* Dropdown Menu */
  .submenu {
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--white);
    min-width: 220px;
    box-shadow: var(--shadow-lg);
    border-radius: 0 0 8px 8px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    z-index: 1000;
  }

  .nav-item:hover .submenu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .submenu a {
    display: block;
    padding: 0.75rem 1.25rem;
    color: var(--text);
    text-decoration: none;
    font-size: 0.9rem;
    border-bottom: 1px solid #edf2f7;
    transition: background-color 0.2s, color 0.2s;
  }

  .submenu a:last-child {
    border-bottom: none;
    border-radius: 0 0 8px 8px;
  }

  .submenu a:hover {
    background: var(--primary);
    color: var(--white);
  }

  /* Nav Header (visible on mobile) */
  .nav-header {
    display: none;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--white);
  }

  .nav-logo img {
    height: 40px;
    width: auto;
  }

  .nav-logo span {
    font-weight: 600;
    font-size: 1rem;
  }

  /* Mobile Menu Toggle */
  .mobile-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--white);
    font-size: 1.75rem;
    cursor: pointer;
    padding: 0.5rem;
    line-height: 1;
  }

  @media (max-width: 1024px) {
    .nav-menu {
      flex-wrap: wrap;
      justify-content: center;
    }

    .nav-link {
      padding: 0.875rem 1rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      padding: 0;
    }

    .nav-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      padding: 0.75rem 1rem;
    }

    .mobile-toggle {
      display: block;
    }

    .nav-menu {
      display: none;
      flex-direction: column;
      flex-wrap: nowrap;
      width: 100%;
      max-height: 70vh;
      overflow-y: auto;
    }

    .nav-menu.active {
      display: flex;
    }

    .nav-item {
      width: 100%;
    }

    .nav-link {
      padding: 1rem 1.25rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      width: 100%;
    }

    .submenu {
      position: static;
      opacity: 1;
      visibility: visible;
      transform: none;
      box-shadow: none;
      display: none;
      background: var(--primary);
      border-radius: 0;
      width: 100%;
      min-width: unset;
    }

    .nav-item.active .submenu {
      display: flex;
      flex-direction: column;
    }

    .submenu a {
      color: var(--white);
      border-color: rgba(255, 255, 255, 0.1);
      padding-left: 2.5rem;
      font-size: 0.85rem;
      width: 100%;
    }

    .submenu a:hover {
      background: rgba(255, 255, 255, 0.1);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('.mobile-toggle');
    const menu = document.querySelector('.nav-menu');
    
    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('active');
        // Cambia icona hamburger/close
        toggle.textContent = menu.classList.contains('active') ? '✕' : '☰';
      });
    }

    // Mobile submenu toggle
    const navItems = document.querySelectorAll('.nav-item');
    navItems.forEach(item => {
      const link = item.querySelector('.nav-link');
      if (link) {
        link.addEventListener('click', (e) => {
          if (window.innerWidth <= 768) {
            const submenu = item.querySelector('.submenu');
            if (submenu) {
              e.preventDefault();
              // Chiudi altri submenu aperti
              navItems.forEach(otherItem => {
                if (otherItem !== item) {
                  otherItem.classList.remove('active');
                }
              });
              item.classList.toggle('active');
            }
          }
        });
      }
    });

    // Chiudi menu quando si clicca fuori
    document.addEventListener('click', (e) => {
      const nav = document.querySelector('nav');
      const target = e.target as HTMLElement;
      if (nav && !nav.contains(target) && menu?.classList.contains('active')) {
        menu.classList.remove('active');
        if (toggle) toggle.textContent = '☰';
      }
    });
  });
</script>
